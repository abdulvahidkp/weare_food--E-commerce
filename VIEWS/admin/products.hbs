<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Weare admin</title>
	<link rel="icon" href="/user/img/Fevicon.jpg" type="image/png">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/admin/css/style.css" rel="stylesheet">
</head>

<body id="adminProduct">


    <div class="container-fluid position-relative d-flex p-0">
        <div class="content">
               <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="/admin/home" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-home"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0 m-3">
                    <i class="fa fa-bars"></i>
                </a>
            
            </nav>
            <!-- Recent Sales Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="mb-0">Products</h2>

                        <button type="button" class="btn btn-info"><a href="/admin/addProduct" class="text-dark">Add new
                                product</a></button>

                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0" id="example">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">SI No.</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Product Image</th>
                                    <th scope="col">No. of Stocks</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">MRP</th>
                                    <th scope="col">Selling Price</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td>{{this.productName}}</td>
                                    <td><img src="{{this.image.[0]}}" alt="" width="80"></td>
                                    <td>{{this.productStock}} unit</td>
                                    <td>{{this.productCategory.category}} <p>{{#if this.productCategory.status}}enable
                                            {{else}} disabled{{/if}}</p>
                                    </td>
                                    <td>₹{{this.productPrice}}</td>
                                    <td>₹{{this.productSellingPrice}}</td>
                                    <td>{{this.productDescription}}</td>
                                    {{#if this.productCategory.status}}
                                    <td><a class="btn btn-sm btn-light" href="/admin/editProduct/{{this._id}}">Edit</a></td>
                                    <td><a class="btn btn-sm {{#if this.productStatus}}btn-primary{{else}}btn-info{{/if}}  ms-3"
                                            href="/admin/productAction/?id={{this._id}}"
                                            onclick="return confirm('Are you sure?')">{{#if this.productStatus}}Disable{{else}}Enable{{/if}}</a></td>
                                    {{else}}
                                    <td><a class="btn btn-sm btn-">Edit</a></td>
                                    <td><a class="btn btn-sm btn-  ms-3">{{#if this.productStatus}}Disable{{else}}Enable{{/if}}</a></td>
                                    {{/if}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Recent Sales End -->
        </div>
    </div>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/lib/chart/chart.min.js"></script>
    <script src="/admin/lib/easing/easing.min.js"></script>
    <script src="/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/admin/js/main.js"></script>
</body>

</html>