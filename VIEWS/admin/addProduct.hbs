    function validation(){
    let name= document.forms.productAddform.name.value
    let category= document.forms.productAddform.category.value
    let stock= document.forms.productAddform.stock.value
    let mrp= document.forms.productAddform.mrp.value
    let sellingPrice= document.forms.productAddform.sellingPrice.value
    let description= document.forms.productAddform.description.value
    let picture= document.forms.productAddform.picture.value

    if(name==''){
    window.alert('please enter your name')
    name.focus();
    return false
    }else if(category==''){
    window.alert('please select category')
    category.focus()
    return false
    }else if(stock==''){
    alert('please enter how many stock are there')
    stock.focus()
    return false
    }else if(mrp==''){
    alert('please enter how much talhe mrp ')
    mrp.focus()
    return false
    }else if(sellingPrice==''){
    alert('please enter selling price')
    sellingPrice.focus()
    return false
    }else if(sellingPrice>mrp){
    alert('selling price is greater than mrp')
    sellingPrice.focus()
    return false
    }else if(description==''){
    alert('fill description correctly')
    description.focus()
    return false
    }
    return true
    }

    </script>

