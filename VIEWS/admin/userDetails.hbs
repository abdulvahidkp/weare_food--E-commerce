<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" id="adminUser">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/admin/css/style.css" rel="stylesheet">
</head>

<body>

    <div class="container-fluid position-relative d-flex p-0">
        <div class="content">
            <!-- Recent Sales Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="mb-0">Users</h2>

                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">SI No.</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    {{!-- <th scope="col">Verified</th> --}}
                                    <th scope="col">Status</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <a class="btn btn-sm btn-primary  ms-3"
                                            href="/admin/categoryDelete/?id={{this._id}}"
                                            onclick="return confirm('Are you sure?')">Block</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <div class="btn-toolbar" role="toolbar">
                                <div class="btn-group me-2" role="group" aria-label="Second group">
                                    {{#times totalPages pageNum}}
                                    {{#if_eq '{{pageNum}}' '{{this}}'}}
                                    <button type="button" class="btn btn-info"><a
                                            href="/admin/userDetails/?page={{this}}">{{this}}</a></button>
                                    {{else}}
                                    <button type="button" class="btn btn-secondary"><a
                                            href="/admin/userDetails/?page={{this}}">{{this}}</a></button>
                                    {{/if_eq}}
                                    {{/times}}
                                    {{!-- <button type="button" class="btn btn-secondary"><a
                                            href="/admin/userDetails/?page=2">2</a></button>
                                    <button type="button" class="btn btn-secondary"><a
                                            href="/admin/userDetails/?page=3">3</a></button>
                                    <button type="button" class="btn btn-secondary"><a
                                            href="/admin/userDetails/?page=4">4</a></button>
                                    <button type="button" class="btn btn-secondary"><a
                                            href="/admin/userDetails/?page=5">5</a></button>
                                    <button type="button" class="btn btn-secondary"><a
                                            href="/admin/userDetails/?page=6">6</a></button>
                                    <button type="button" class="btn btn-secondary"><a
                                            href="/admin/userDetails/?page=7">7</a></button>
                                    <button type="button" class="btn btn-info"><a
                                            href="/admin/userDetails/?page=8">8</a></button> --}}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- Recent Sales End -->

        </div>
    </div>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/lib/chart/chart.min.js"></script>
    <script src="/admin/lib/easing/easing.min.js"></script>
    <script src="/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/admin/js/main.js"></script>

</body>

</html>