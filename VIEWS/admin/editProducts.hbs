<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
   <title>Weare admin</title>
	<link rel="icon" href="/user/img/Fevicon.jpg" type="image/png">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">



</head>

<body>



    <div class="content ">
           <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="/admin/home" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-home"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0 m-3">
                    <i class="fa fa-bars"></i>
                </a>
            
            </nav>
        <button class="btn btn-light mt-3 ms-4"><a href="/admin/products"><i
                    class="fa fa-reply btn-light"></i></a></button>
        <!-- Form Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="row g-4">
                <div class="col-sm-12 col-xl-6">
                    <div class="bg-secondary rounded h-100 p-4">
                        <h2 class="mb-4">Product Edit Page</h2>
                        <form action="/admin/editProduct/{{data._id}}" enctype="multipart/form-data" method="post" name="productAddform">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" value="{{data.productName}}"
                                    placeholder="name@example.com" name="name" >
                                <label for="floatingInput">Product Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <select class="form-select" id="floatingSelect"
                                    aria-label="Floating label select example" name="productCategory" >
                                    <option selected value="{{data.productCategory._id}}">{{data.productCategory.category}}</option>
                                    {{#each categoryDetails}}
                                    <option value="{{this._id}}">{{this.category}}</option>
                                    {{/each}}
                                </select>
                                <label for="floatingSelect">choose from here</label>
                            </div>
                            <div class="d-flex">
                                <div class="form-floating mb-3 col-sm-2">
                                    <input type="number" class="form-control" id="floatingPassword" name="stock" value="{{data.productStock}}"
                                        placeholder="Stock" >
                                    <label for="floatingPassword">Stock</label>
                                </div>

                                <div class="form-floating mb-3 col-sm-4 col-md-3 ms-3">
                                    <input type="number" class="form-control" id="floatingPassword" value="{{data.productPrice}}"
                                        placeholder="Password" name="mrp" >
                                    <label for="floatingPassword">MRP</label>
                                </div>
                                <div class="form-floating mb-3 col-sm-4 col-md-3 ms-3">
                                    <input type="number" class="form-control" id="floatingPassword" value="{{data.productSellingPrice}}"
                                        placeholder="Password" name="sellingPrice" >
                                    <label for="floatingPassword">Selling Price</label>
                                </div>
                            </div>
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" 
                                    style="height: 150px;" name="description">{{data.productDescription}}</textarea>
                                <label for="floatingTextarea">Description</label>
                            </div>
                            
                            <div class="mb-3">
                                <label for="formFileMultiple" class="form-label">Edit Product Photos.</label>
                                <input class="form-control bg-dark" type="file"
                                    accept="image/png,image/jpeg" id="formFileMultiple" name="picture" onchange="oldImageChange(event)"
                                    multiple >
                            </div>

                            <div>
                                <img src="{{data.image}}" class="mb-3" width="80" alt="" id="imageView">
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                            <button type="reset" class="btn btn-info">reset</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function oldImageChange(event){
            document.getElementById('imageView').src=URL.createObjectURL(event.target.files[0])
        }
    </script>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/chart/chart.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>